@model IEnumerable<MunicipalityManagementSystem.Models.Staff>

@{
    ViewData["Title"] = "Staff Index";
}

<h1>Staff Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Hire Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Position</td>
                <td>@item.Department</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.HireDate.ToString("d")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StaffID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StaffID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StaffID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

