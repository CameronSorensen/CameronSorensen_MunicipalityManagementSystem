@model IEnumerable<MunicipalityManagementSystem.Models.Citizen>

@{
    ViewData["Title"] = "Citizen Index";
}

<h1>Citizen Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Registration Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.DateOfBirth?.ToString("d")</td>
                <td>@item.RegistrationDate.ToString("d")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CitizenID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CitizenID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CitizenID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
